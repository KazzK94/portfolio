---
import SectionContainer from "../SectionContainer.astro";
import ProjectCard from "../ProjectCard.astro";

// i18n import
import { getI18n } from "../../i18n";
// i18n setup
const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale });

// Projects Data
const projects = [
  {
    title: {
      en: "Hp Tracker for TTRPG",
      es: "Contador de HP para TTRPG",
    },
    description: {
      en: "A way to track your own HP in a TTRPG, with buttons to heal, receive damage, get Temp HP and even fully heal.",
      es: "Una forma de llevar la cuenta de tus HP en un TTRPG, con botones para curarte, recibir daño, obtener HP Temporal e incluso curarte completamente.",
    },
    link: "https://dnd-hp-counter.netlify.app/",
    image: "/images/projects/project01.webp",
  },
  {
    title: {
      en: "My own Portfolio",
      es: "Mi propio Portafolio",
    },
    description:{
		en: "It is actually this very self project! A portfolio to showcase my skills and projects. Sorry for the recursion.",
		es: "¡Este es en realidad este mismo proyecto! Un portafolio para mostrar mis habilidades y proyectos. Perdón por la recursividad.",
	},
    link: "https://kazz-dev-portfolio.netlify.app/",
    image: "/images/projects/project02.webp",
  },
];
---

<SectionContainer>
  <h1 class="text-3xl md:text-4xl font-bold mb-5 md:mb-7 drop-shadow">
    <span class="text-orange-500/95 dark:text-orange-400">&lt;/&gt;</span>
    <span class="text-amber-500 dark:text-amber-400 ml-1"
      >{i18n.MY_PROJECTS}</span
    >
  </h1>

  <section class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {projects.map((project) => <ProjectCard {...project} />)}
  </section>
</SectionContainer>
