---
import SectionContainer from "../SectionContainer.astro";

// Defining netlify field in html form
interface FormHTMLAttributes<T> {
  netlify?: boolean;
}
---

<SectionContainer>
  <h1 class="text-3xl md:text-4xl font-bold mb-5 md:mb-7">
    <span class="text-orange-400/95">&lt;/&gt;</span>
    <span class="text-amber-400/95 ml-1">Contact me</span>
  </h1>
  <form class="flex flex-col gap-4" name="contact" data-netlify="true">
    <input
      name="name"
      type="text"
      placeholder="Name"
      required
      class="w-full px-4 py-2 rounded-md bg-gray-700 border border-gray-600"
    />
    <input
      name="email"
      type="email"
      placeholder="Email"
      required
      class="w-full px-4 py-2 rounded-md bg-gray-700 border border-gray-600"
    />
    <textarea
      name="message"
      placeholder="Type your message here"
      required
      class="w-full px-4 py-2 rounded-md bg-gray-700 border border-gray-600 h-32"
    ></textarea>
    <button
      type="submit"
      class="w-full text-white bg-orange-700 hover:bg-orange-700 px-6 py-2 rounded-md"
      >Send</button
    >
  </form>
</SectionContainer>
