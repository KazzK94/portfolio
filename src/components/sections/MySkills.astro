---
import SectionContainer from "../SectionContainer.astro";

// Data
const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "React",
  "Next.js",
  "Node.js",
  "Express",
  "MongoDB",
  "Git",
];
---

<SectionContainer>
  <h1 class="text-3xl md:text-4xl font-bold mb-5 md:mb-7">
    <span class="text-orange-400/95">&lt;/&gt;</span>
    <span class="text-amber-400/95 ml-1">My Skills</span>
  </h1>
  <div class="flex flex-wrap justify-center gap-4">
    {
      skills.map((skill, index) => (
        <span class="bg-amber-800 text-amber-50 px-4 py-2 rounded-full text-sm font-semibold">
          {skill}
        </span>
      ))
    }
  </div>
</SectionContainer>
