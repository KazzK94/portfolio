---
import ExternalLinkIcon from "./icons/ExternalLinkIcon.astro";

const { title, description, link, image } = Astro.props;
---

<article
  class=`
  	bg-gray-100 dark:bg-gray-700/70 
	border border-gray-300 dark:border-white/40
	shadow-lg shadow-white/10 
	rounded-lg cursor-pointer
	hover:shadow-black/40 dark:hover:shadow-white/15 hover:scale-105
	transition-all duration-300 ease-in-out
  `
  aria-label={`Navigate to project: ${title}`}
>
  <img
    src={image}
    alt={title}
    class="w-full h-48 object-cover rounded-t-lg [mask-image:linear-gradient(to_bottom,black_95%,transparent);]"
  />
  <div class="p-4">
    <h1
      class="text-xl font-semibold mb-2 text-amber-500 drop-shadow dark:text-amber-400 cursor-pointer"
    >
      {title}
    </h1>
    <p class="text-gray-600 dark:text-gray-200 cursor-pointer">{description}</p>

    <a
      class="bg-black hover:bg-black/90 dark:hover:bg-black/80 transition-colors text-white/90 text-lg rounded-lg px-4 py-2 mt-4 w-full text-center flex items-center justify-center gap-2"
      href=`${link}`
      target="_blank"
      rel="noreferrer"
    >
      Go to project <ExternalLinkIcon class="inline-block " />
    </a>
  </div>
</article>
