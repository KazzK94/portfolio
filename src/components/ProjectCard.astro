---
const { title, description, link, image } = Astro.props;
---

<article
  class=`
  	bg-gray-700/70 shadow-lg shadow-white/10 opacity-95 rounded-lg border cursor-pointer
	hover:shadow-white/20 hover:opacity-100 hover:scale-105
	transition-all duration-300
  `
>
  <a href=`${link}` target="_blank" rel="noreferrer">
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover rounded-t-lg"
    />
    <div class="p-4">
      <h3 class="text-xl font-semibold mb-2 text-amber-500 cursor-pointer">
        {title}
      </h3>
      <p class="text-gray-200/80 cursor-pointer">{description}</p>
    </div>
  </a>
</article>
